@model ApplicationClientMVC.ViewModels.RegisterModel

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />

<link type="text/css" href="~/css/Login.css" rel="stylesheet" />

<div class="container">
	<div class="row">

		<div class="col-md-offset-3 col-md-6">
			<form class="form-horizontal" asp-action="Register" asp-controller="Register">
				<span class="heading">Регистрация</span>
				<div class="form-group">
					<input type="text" class="form-control" id="inputEmail" placeholder="E-mail" asp-for="user">
					<i class="fa fa-user"></i>
				</div>
				<div class="form-group help">
					<input type="password" class="form-control" id="inputPassword" placeholder="Password" asp-for="pass">
					<i class="fa fa-lock"></i>
				</div>
				<div class="form-group help">
					<input type="password" class="form-control" id="inputPassword" placeholder="Password" asp-for="pass2">
					<i class="fa fa-lock"></i>
				</div>
				<div class="form-group">
					<button type="submit" class="btn btn-default">Регистрация</button>
				</div>
			</form>
		</div>

	</div><!-- /.row -->
</div><!-- /.container -->
@if (TempData["DanderMessage"] != null)
{
	<div class="alert alert-danger" role="alert">
		@TempData["DanderMessage"]
	</div>
}
